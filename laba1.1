#include <iostream>
#include<cmath>
#include<iomanip>
using namespace std;
int main()
{
    double ans, step, x, m;
    int k;
    cout << "Enter x(-1;1]: ";
    cin >> x;
    while (x <= -1 || x > 1)
    {
        cout << "You\'ve entered a number that is not in the definition area, please try again: ";
        cin >> x;
    }
    cout << "Enter k: ";
    cin >> k;
    step = pow(10,-1*k);
    double slog = x;
    int n = 2;
    while(abs(slog) > step)
    {
        ans += slog;
        slog *= (-1) * x / n;
        n += 1;
    }
    cout << "The answer is: " << fixed << setprecision(k) << ans << endl;
    cout << "ln(1-x): " << fixed << setprecision(k) << log(1+x) << endl;
    cout << "The difference between values: " << abs(ans-log(1+x)) << endl;
    return 0;
}
